<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
        name="viewModel"
        type="com.cws.image.PlayInstructionViewModel"
        />
  </data>

  <android.support.design.widget.CoordinatorLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true"
      >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="?attr/colorPrimary"
          app:popupTheme="@style/AppTheme.PopupOverlay"
          />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/instruction_title"
          android:text="@{viewModel.subject + ` - ` + viewModel.language}"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:gravity="start"
          android:textAppearance="@style/TextAppearance.AppCompat.Display1"
          android:paddingTop="32dp"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          />

      <ProgressBar
          android:id="@+id/instruction_progress2"
          android:layout_width="0dp"
          android:layout_height="32dp"
          app:layout_constraintTop_toBottomOf="@id/instruction_title"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginTop="16dp"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          android:indeterminate="false"
          android:progress="100"
          android:progressDrawable="@drawable/instruction_progress"
          />

      <!--<com.cws.image.CueTimer-->
          <!--xmlns:custom="http://schemas.android.com/apk/res-auto"-->
          <!--android:id="@+id/cue_timer"-->
          <!--android:layout_width="400dp"-->
          <!--android:layout_height="400dp"-->
          <!--android:layout_marginEnd="8dp"-->
          <!--android:layout_marginStart="8dp"-->
          <!--android:layout_marginTop="24sp"-->
          <!--app:layout_constraintLeft_toLeftOf="parent"-->
          <!--app:layout_constraintRight_toRightOf="parent"-->
          <!--app:layout_constraintTop_toBottomOf="@id/bar"-->
          <!--custom:size="400dp"-->
          <!--custom:stroke_width="10dp"-->
          <!--custom:end_mark_length_ratio="0.2"-->
          <!--custom:start_angle_degrees="240"-->
          <!--custom:sweep_angle_degrees="-330"-->
          <!--custom:needle_length_ratio="0.65"-->
          <!--custom:center_radius="10dp"-->
          <!--/>-->

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/cue_text"
          android:text="@string/cue_text"
          android:visibility="gone"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/instruction_progress2"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginTop="64dp"
          android:gravity="center"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Display4"
          />

      <android.support.v7.widget.AppCompatTextView
          android:text="@{viewModel.appVersionInfo}"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:gravity="center"
          />

    </android.support.constraint.ConstraintLayout>

  </android.support.design.widget.CoordinatorLayout>
</layout>
