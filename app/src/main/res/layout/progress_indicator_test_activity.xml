  <android.support.constraint.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/animation_test"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context="com.cws.image.ProgressIndicatorTestActivity"
      >

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24sp"
        android:gravity="center_vertical|fill_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
      <android.support.v7.widget.AppCompatTextView
          android:id="@id/countdown"
          android:layout_width="72sp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="0dp"
          android:text="00"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat.Display3"
          android:textColor="@color/colorDisabledText"
          />

      <ImageView
          android:id="@id/bar_cue_timer"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:src="@drawable/instruction_progress2"
          android:transformPivotX="0dp"
          />
    </LinearLayout>

    <com.cws.image.CueTimer
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_cue_timer"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar"
        custom:size="400dp"
        custom:stroke_width="10dp"
        custom:end_mark_length_ratio="0.2"
        custom:start_angle_degrees="240"
        custom:sweep_angle_degrees="-330"
        custom:needle_length_ratio="0.65"
        custom:center_radius="10dp"
        />

    <Button
        android:id="@+id/start_animation"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:onClick="startAnimation"
        android:text="Start Animation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:onClick="reset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

  </android.support.constraint.ConstraintLayout>
